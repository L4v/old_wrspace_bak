package org.jrabbit.base.graphics.transforms.listeners;

import org.jrabbit.base.graphics.transforms.Rotation;

/*****************************************************************************
 * A RotationListener can "watch" Rotation objects to see if their values
 * change.
 * 
 * @author Chris Molini
 *****************************************************************************/
public interface RotationListener
{
	/*************************************************************************
	 * If a Rotation this object is listening to has its values changed, then
	 * this is called.
	 * 
	 * @param rotation
	 *            A reference to the Rotation that changed.
	 *************************************************************************/
	public void rotated(Rotation rotation);
}
