package org.jrabbit.base.graphics.types;

import org.jrabbit.base.graphics.transforms.Vector2f;

/*****************************************************************************
 * An object that is Located has a Vector2f that it uses to translate rendering.
 * This interface provides a method to access that vector.
 * 
 * @author Chris Molini
 *****************************************************************************/
public interface Located
{
	/*************************************************************************
	 * Accesses the object's location.
	 * 
	 * @return The Vector2f that translates the object.
	 *************************************************************************/
	public Vector2f location();
}