package org.jrabbit.base.graphics.types;

import org.jrabbit.base.graphics.transforms.BlendOp;

/******************************************************************************
 * An object that is Blended has a BlendOp it applies to rendering. This
 * interface provides a way to access that BlendOp and change its settings.
 * 
 * @author Chris Molini
 *****************************************************************************/
public interface Blended
{
	/*************************************************************************
	 * Accesses the object's blending controls.
	 * 
	 * @return The BlendOp that defines blending for the object.
	 *************************************************************************/
	public BlendOp blending();
}