package org.jrabbit.base.graphics.layers;

import org.jrabbit.base.graphics.layers.grouped.LayeredRenderList;

/*****************************************************************************
 * A Layered object uses a LayeredRenderList to manage and render Renderable
 * objects. This interface provides a means to access that LayeredRenderList.
 * 
 * @author Chris Molini
 *****************************************************************************/
public interface Layered
{
	/*************************************************************************
	 * Accesses the LayeredRenderList used for rendering.
	 * 
	 * @return The LayeredRenderList used to manage rendering order.
	 *************************************************************************/
	public LayeredRenderList layers();
}
