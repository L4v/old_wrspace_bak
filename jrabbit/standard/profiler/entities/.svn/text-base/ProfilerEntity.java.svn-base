package org.jrabbit.standard.profiler.entities;

import org.jrabbit.base.core.types.Renderable;
import org.jrabbit.base.data.Referenced;
import org.jrabbit.base.graphics.types.Dimensioned;
import org.jrabbit.base.graphics.types.Visible;

/*****************************************************************************
 * A ProfilerEntity is an object that displays information in a ProfilerDisplay.
 * It can be virtually anything, as long as it can render itself, knows its
 * dimensions, and has a String that identifies it.
 * 
 * A fairly wide variety of ProfilerEntity implementations are provided, 
 * covering all generic Profiler activity (displaying information about how
 * particular aspects of the game are running).
 * 
 * @author Chris Molini
 *****************************************************************************/
public interface ProfilerEntity extends Renderable, Referenced, Dimensioned,
		Visible{ }